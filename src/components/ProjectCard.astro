---
import type { ProjectItem } from "../types/ProjectItem";

const { title, technologies, href, websiteUrl } = Astro.props as ProjectItem;
---

<div class="grid-rows grid gap-2">
  <div class="flex items-center gap-3">
    <div
      class="text-primary underline hover:cursor-pointer hover:text-primary/40"
    >
      <a
        href={href}
        target="_blank"
        rel="noopener noreferrer"
        class="hover:underline-offset-2"
        aria-label={`${title} GitHub repository`}
      >
        {title}
      </a>
    </div>
    {websiteUrl && (
      <a
        href={websiteUrl}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center gap-1 rounded bg-accent/20 px-2 py-0.5 text-xs font-medium text-accent hover:bg-accent/30 transition-colors"
        aria-label={`${title} live website`}
      >
        live
        <span>→</span>
      </a>
    )}
  </div>
  <div class="text-accent">
    {
      technologies.map((tech: string, index: number) => (
        <span>
          {tech}
          {index < technologies.length - 1 ? <span class="px-2">•</span> : ""}
        </span>
      ))
    }
  </div>
</div>
